{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react", // Add this to enable JSX in TypeScript
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Make sure this points to your source files
  "exclude": ["node_modules"]
}
